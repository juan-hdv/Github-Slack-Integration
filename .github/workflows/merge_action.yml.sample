name: Promotion dev1 prod1 Slack notification
on:
  pull_request_target:
    types:
      - closed
    branches:
      - 'main'

jobs:
  promoted_to_prod:
    if: |
      (
      github.event.pull_request.merged == true
      )
    runs-on: ubuntu-latest
    steps:
    - name: PR Merged
      run: |
        echo The PR was merged: ${{ github.event.pull_request.title }}"
